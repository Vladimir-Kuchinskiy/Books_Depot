<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<div class="row">
  <div class="col-sm-3">
    <h1>Groups</h1>
    <p class="lead">
      <%= link_to "All books", root_path %>
    </p>
    <% @groups.each do |group| %>
      <p class="lead">
        <%= link_to group.name, group %>
      </p>
    <% end %>
  </div>
  <div class="col-sm-9">
    <h1>
      <%= @group.name.capitalize %> group
      <% if current_user && current_user.admin? %>
        <%= link_to 'Edit', edit_group_path(@group), class: "btn btn-warning" %>
      <% end %>
    </h1>
    <% unless @group.books.empty? %>
      <table class="table">
        <% @group.books.each do |book| %>
          <tr class="row">
            <td class="col-sm-2">
              <%= link_to book do %>
                <%= image_tag book.image_url, id: "img_catalog" %>
              <% end %>
            </td>
            <td class="col-sm">
              <p class="lead"><%= link_to book.title, book %></p>
              <p class="mb-0"><%= book.description %></p>
              <p class="lead">ID: <%= book.id %> | Count: <%= book.count %></p>
              <% if current_user.admin? %>
                <p class="lead">Reading now: <%= book.reading_now %></p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    <% end %>
  </div>
</div>


