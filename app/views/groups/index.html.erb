<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<div class="row">
  <div class="col-sm-10">
    <h1>Groups</h1>
    <% if current_user && current_user.admin? && current_user.special_ability? %>
      <%= link_to 'New Group', new_group_path, class: "btn btn-info", id:"img "%>
    <% end %>
    <table class="table">
      <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td> <%= group.id %> </td>
          <td> <%= link_to group.name, group %> </td>
          <td> <%= group.created_at %> </td>
          <td> <%= group.updated_at %> </td>
          <td>
            <%= link_to 'Show', group, class: "btn btn-success" %>
            <% if current_user && current_user.admin? && current_user.special_ability? %>|
              <%= link_to 'Edit', edit_group_path(group), class: "btn btn-warning" %> |
              <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

</div>

