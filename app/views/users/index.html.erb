<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<div class="row">
  <div class="col-sm-10">
    <h1>Admins</h1>
    <table class="table">
      <thead>
      <tr>
        <th>ID</th>
        <th>Login</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
        <tr id="<%= user.id %>">
          <td> <%= user.id %> </td>
          <td> <%= link_to user.login, user %> </td>
          <td> <%= user.created_at.strftime("%d-%m-%Y") %> </td>
          <td> <%= user.updated_at.strftime("%d-%m-%Y") %> </td>
          <% if current_user.id != user.id %>
            <td> <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: 'btn btn-danger' %> </td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>