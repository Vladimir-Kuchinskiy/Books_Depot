<% if notice %>
<p class="alert alert-success"><%= notice %></p>
<% end %>
<div class="col-sm-10">
  <h1>Authors</h1>
  <%= link_to 'New Author', new_author_path, class: "btn btn-info", id:"img" %>
  <table class="table">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @authors.each do |author| %>
      <tr id="<%= author.id %>">
        <td><%= author.id %></td>
        <td><%= link_to author.name, author %></td>
        <td> <%= author.created_at.strftime("%d-%m-%Y") %> </td>
        <td> <%= author.updated_at.strftime("%d-%m-%Y") %> </td>
        <td>
          <%= link_to 'Show', author, class: "btn btn-success" %> |
          <%= link_to 'Edit', edit_author_path(author), class: "btn btn-warning" %> |
          <%= link_to 'Delete', author, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", remote: true %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>



