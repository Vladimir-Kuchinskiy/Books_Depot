<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>

<h1>Books</h1>
<% if current_user && current_user.admin? %>
  <h3><%= link_to 'New Book', new_book_path, class: "btn btn-info", id: "img" %></h3>
<% end %>
<table class="table">
  <thead>
  <tr>
    <th>Image</th>
    <th>ID</th>
    <th>Title</th>
    <th>Count</th>
    <th>Reading Now</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr id="<%= book.id %>">
      <td> <%= image_tag book.image_url, id: "table_image" %> </td>
      <td> <%= book.id %> </td>
      <td> <%= link_to book.title, book %> </td>
      <td> <%= book.count %> </td>
      <td> <%= book.reading_now %> </td>
      <td> <%= book.created_at.strftime("%d-%m-%Y") %> </td>
      <td> <%= book.updated_at.strftime("%d-%m-%Y") %> </td>
      <td>
        <%= link_to 'Show', book, class: "btn btn-success" %> |
        <%= link_to 'Edit', edit_book_path(book), class: "btn btn-warning" %> |
        <%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", remote: true %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>




