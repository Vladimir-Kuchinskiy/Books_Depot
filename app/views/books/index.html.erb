<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>

<h1>Books</h1>
<% if current_user && current_user.admin? && current_user.special_ability? %>
  <h3><%= link_to 'New Book', new_book_path, class: "btn btn-info", id: "img" %></h3>
<% end %>
<table class="table">
  <thead>
  <tr>
    <th>Image</th>
    <th>ID</th>
    <th>Title</th>
    <th>Price</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.image_url, id: "table_image" %></td>
      <td><%= book.id %></td>
      <td><%= link_to book.title, book %></td>
      <td><%= book.price %></td>
      <td> <%= book.created_at %> </td>
      <td> <%= book.updated_at %> </td>
      <td>
        <%= link_to 'Show', book, class: "btn btn-success" %>
        <% if current_user && current_user.admin? && current_user.special_ability? %>|
          <%= link_to 'Edit', edit_book_path(book), class: "btn btn-warning" %> |
          <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>




