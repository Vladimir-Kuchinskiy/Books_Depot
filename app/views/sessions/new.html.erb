<div class="row">
  <div class="col-sm-4"></div>
  <div class="col-sm-4">
    <h1>Sign in</h1>
    <%= simple_form_for(:session, url: login_path) do |f| %>
      <%= f.input :login, :placeholder => 'Login' %>
      <%= f.input :password, :placeholder => 'Password' %>
      <%= f.submit "Log in", :class => "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-sm-4"></div>
</div>